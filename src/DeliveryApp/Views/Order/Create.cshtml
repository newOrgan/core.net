@model DeliveryApp.Models.Order
@{
    Layout = null;
}
<form asp-action="create" asp-controller="Order">
    <div class="form-group">
        <label asp-for="name" class="control-label">Имя</label>
        <input type="text" asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="adress" class="control-label">Адрес</label>
        <input type="text" asp-for="adress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="phone" class="control-label">Телефон</label>
        <input type="number" asp-for="phone" class="form-control" />
    </div>
    <input type="number" asp-for="DishesID" class="form-control" value="@ViewBag.dishesid" />
    
    

    
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
